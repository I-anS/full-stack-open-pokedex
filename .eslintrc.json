{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": { "ecmaVersion": 2021, "sourceType": "module" },
  "rules": {
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "semi": ["error", "never"],
    "no-console": "warn",
    "no-unused-vars": ["warn"],
    "no-trailing-spaces": "error"
  },
  "settings": { "react": { "version": "detect" } }
}
